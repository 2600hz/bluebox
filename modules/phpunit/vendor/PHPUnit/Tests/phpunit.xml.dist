<?xml version="1.0" encoding="UTF-8"?>

<phpunit>
  <php>
    <var name="PHPUNIT_TESTSUITE_EXTENSION_SELENIUM_ENABLED"
         value="false"/>
    <var name="PHPUNIT_TESTSUITE_EXTENSION_SELENIUM_HOST"
         value="127.0.0.1"/>
    <var name="PHPUNIT_TESTSUITE_EXTENSION_SELENIUM_PORT"
         value="4444"/>
    <var name="PHPUNIT_TESTSUITE_EXTENSION_SELENIUM_BROWSER"
         value="*firefox"/>
  </php>
  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">../Extensions</directory>
      <directory suffix=".php">../Framework</directory>
      <directory suffix=".php">../Runner</directory>
      <directory suffix=".php">../TextUI</directory>
      <directory suffix=".php">../Util</directory>
    </whitelist>
  </filter>
</phpunit>
